10 REM *** GUESS THE NUMBER ***
20 S = INT(RND(1)*100) + 1
30 C = 0
40 PRINT "I AM THINKING OF A NUMBER (1-100)"
50 PRINT "TRY TO GUESS IT!"
60 PRINT

100 REM *** MAIN LOOP ***
110 INPUT "YOUR GUESS"; G
120 C = C + 1
130 IF G = S THEN GOTO 200
140 IF G < S THEN PRINT "TOO LOW!"
150 IF G > S THEN PRINT "TOO HIGH!"
160 GOTO 110

200 REM *** WINNER ***
210 PRINT "YOU GOT IT IN"; C; "GUESSES!"
220 PRINT "PLAY AGAIN? (Y/N)"
230 INPUT A$
240 IF A$ = "Y" THEN GOTO 20
250 PRINT "GOODBYE."
