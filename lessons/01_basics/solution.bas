10 REM *** SIMPLE CALCULATOR ***
20 PRINT "--- C64 CALCULATOR ---"
30 INPUT "ENTER FIRST NUMBER"; A
40 INPUT "ENTER SECOND NUMBER"; B
50 PRINT
60 PRINT "NUMBERS ARE"; A; "AND"; B
70 PRINT "SUM: "; A + B
80 PRINT "DIFF:"; A - B
90 PRINT "PROD:"; A * B
100 IF B = 0 THEN GOTO 120
110 PRINT "QUOT:"; A / B
120 IF B = 0 THEN PRINT "QUOT: UNDEFINED (DIV BY ZERO)"
130 PRINT
140 PRINT "DONE."
