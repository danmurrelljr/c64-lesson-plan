10 REM *** REFLEX TESTER ***
20 PRINT CHR$(147)
30 PRINT "PRESS ANY KEY TO START..."
40 GET K$ : IF K$ = "" THEN GOTO 40

100 REM *** WAITING PHASE ***
110 PRINT "GET READY..."
120 WAITTIME = INT(RND(1)*180) + 60 : REM 1-4 SECONDS (60-240 TICKS)
130 TARGET = TI + WAITTIME
140 IF TI < TARGET THEN GOTO 140

200 REM *** GO PHASE ***
210 PRINT "GO!!!"
220 START = TI
230 GET K$ : IF K$ = "" THEN GOTO 230
240 FINISH = TI

300 REM *** RESULTS ***
310 DIFF = FINISH - START
320 PRINT "TIME: "; DIFF; " JIFFIES"
330 IF DIFF < 15 THEN PRINT "SUPERHUMAN!"
340 IF DIFF >= 15 AND DIFF < 30 THEN PRINT "EXCELLENT!"
350 IF DIFF >= 30 AND DIFF < 60 THEN PRINT "NOT BAD."
360 IF DIFF >= 60 THEN PRINT "WAKE UP!"
370 PRINT
380 INTRO = "TRY AGAIN? (Y/N)"
390 INPUT INTRO; A$
400 IF A$ = "Y" THEN GOTO 20
410 END
